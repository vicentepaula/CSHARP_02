<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        img{
            margin-right:14px;
            padding-top:10px;
            width:65px;
        }

        .bt_sair{

          padding-left: 519px;
            
        }

    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <img src="~/imagem/logoArcomix.png" alt="Logo Arcomix" />

            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                { 
                                       
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("CONTROLE DE CONTRATO", "Index", "Contrato", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("CADASTRAR USUÁRIO", "CadastroUsuario", "Logon")</li>  
                        <li class="bt_sair">@Html.ActionLink("SAIR", "sair", "logon")</li>

                    <!--<li>@Html.ActionLink("Sobre", "About", "Home")</li>
                        <li>@Html.ActionLink("Contato", "Contact", "Home")</li> -->
                    </ul>                       
                                    

                 }
                else
                {
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("CONTROLE DE CONTRATO", "Logon", "logonSistema", new { area = "" }, new { @class = "navbar-brand" })</li>

                    </ul>

                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Desenvolvimento interno Arcomix</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
